<div class="modal">
  <div class="modal-card">
    <h3>Edit</h3>

    {{edit-card-form list=(readonly model.list)
                     title=(readonly model.title)
                     onsubmit=(action "updateCard")}}

    <div class="modal-card-footer">
      <button class="btn btn-delete" type="button" onclick={{action "deleteCard"}}>Delete card</button>
    </div>
  </div>
</div>
